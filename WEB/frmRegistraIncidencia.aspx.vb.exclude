        txtFechaInc.Enabled = pboolEstado
        txtHoraInc.Enabled = pboolEstado

        '--Llamada
        txtViaLlam.Enabled = pboolEstado
        txtNroLlam.Enabled = pboolEstado
        txtUrbLlam.Enabled = pboolEstado
