        '--Incidente
        txtViaInc.Enabled = pboolEstado
        txtNroInc.Enabled = pboolEstado
        txtUrbInc.Enabled = pboolEstado
        txtIntInc.Enabled = pboolEstado
        txtComInc.Enabled = pboolEstado

        '--Informante
